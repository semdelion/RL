  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowBackground">@drawable/toolbarmainback</item>
    <item name="colorPrimary">@android:color/transparent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:textSize">25dp</item>
    <item name="android:actionMenuTextColor">#d7f8fe</item>
    <item name="android:statusBarColor">#80000000</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="myPopupTheme">
    <item name="android:textColor">#d7f8fe</item>
    <item name="android:background">#283544</item>
    <item name="android:colorPrimary">@android:color/transparent</item>
  </style>

  <style name="ToolbarStyle" parent="Theme.AppCompat.NoActionBar">
    <item name="android:textColor">#d7f8fe</item>
    <item name="android:colorBackground">#283544</item>
    <item name="android:elevation">10dp</item>    
  </style>

  <style name="ThemeStat" >
    <item name="android:homeAsUpIndicator">@mipmap/arrow</item>
    <item name="android:itemBackground">#283544</item>
    <item name="android:colorPrimary">@android:color/transparent</item>
  </style>

  <style name="MenuStyle" parent="Theme.AppCompat.NoActionBar">
    <item name="android:textColor">#d7f8fe</item>
    <item name="android:textSize">25dp</item>
    <item name="android:colorPrimary">#3F51B5</item>
    <item name="android:colorPrimaryDark">#303F9F</item>
    <item name="android:colorAccent">#FF4081</item>
    <item name="android:itemBackground">#283544</item>
  </style>
    
  <style name="SplashTheme" parent ="@android:style/Theme.DeviceDefault.NoActionBar.TranslucentDecor">
    <item name="android:windowBackground">@drawable/background_splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
</resources>
